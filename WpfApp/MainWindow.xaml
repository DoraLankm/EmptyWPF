<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="536" Width="996" Background="#FF9AADD2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="307*" />
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="496*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Левая кнопка" Background="#FF6B588C" Grid.ColumnSpan="4" Margin="0,0,4,0" />
        <GridSplitter Grid.Column="3" ShowsPreview="False" Width="4"
        HorizontalAlignment="Center" />
        <Button Grid.Column="4" Content="Правая кнопка" Background="#FFCAAD22" />
    </Grid>
</Window>
